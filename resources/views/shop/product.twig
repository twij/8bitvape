{% extends 'layouts/default' %}

{% block content %}

<div class="page-container">
    <div class="title">
        <h1>{{ product.name }}</h1>
        <h2>{{ product.description }}</h2>
    </div>
    {% if product.page %}
        {% include '../' ~ product.page.include %}
    {% endif %}
</div>

{% endblock %}