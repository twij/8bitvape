{% extends 'layouts/default' %}

{% block content %}

    <div class="search-container">
        <form><input type="text" name="search" class="search" value="{{ term }}" /> <button type="submit" class="btn-search">Search</button></form>
    </div>

    {% for mix in mixes %}
        <a href="/mix/{{ mix.slug }}">
        <div class="mixes-container">
            <div class="mix-title">
                <h1>{{ mix.name }}</h1>
                <h2>{{ mix.user.username }}</h2>
            </div>
            <div class="mix-icons">
                {% for flavour in mix.flavours %}
                    <img src="/img/flavimg/{{ flavour.slug }}.png" alt="{{ flavour.name }}" />
                {% endfor %}
            </div>
        </div>
        </a>
    {% endfor %}

    {{ mixes.onEachSide(3).links()|raw }}

    {% if mixes|length == 0 %}
        <div class="mixes-container">
            <h1>No results found.</h1>
        </div>
    {% endif %}

{% endblock %}